<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6.0"
    tools:context="com.example.layout1.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:background="#DA49E2"
        android:text="THE DANCE CAN REVEAL EVERYTHING MYSTERIOUS THAT IS HIDDEN IN MUSIC, AND IT HAS THE ADDITIONAL MERIT OF BEING HUMAN AND PALPABLE. DANCING IS POETRY WITH ARMS AND LEGS."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_weight="2.0"
        android:background="#B945BE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="4.0" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:src="@drawable/abc_ic_voice_search_api_mtrl_alpha" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_weight="1.0"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_weight="1.0"
            android:src="@drawable/abc_ic_menu_share_mtrl_alpha" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:weightSum="4.0" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="background"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="text style"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="effects"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="share"
            android:textColor="#000"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>
